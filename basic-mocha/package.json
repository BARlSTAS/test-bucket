{
  "name": "basic-mocha",
  "version": "0.0.1",
  "description": "Try using the basics of mocha",
  "main": "index.js",
  "repository": "https://github.com/BARlSTAS/test-bucket.git",
  "license": "MIT",
  "scripts": {
    "test": "mocha -r ts-node/register __test__ --recursive",
    "format": "prettier --write 'src/**/*.ts'",
    "lint": "eslint 'src/**/*.ts' --quiet"
  },
  "prettier": {
    "singleQuote": true,
    "bracketSpacing": true,
    "trailingComma": "all",
    "printWidth": 80,
    "endOfLine": "lf",
    "arrowParens": "always"
  },
  "dependencies": {
    "axios": "^0.19.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/mocha": "^8.0.1",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "husky": "^4.2.3",
    "mocha": "^8.1.0",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn test && yarn format && yarn lint",
      "pre-push": "yarn test"
    }
  }
}
